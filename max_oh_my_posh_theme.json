{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none"
          },
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0c0",
          "template": " {{ .UserName }} ",
          "foreground": "#000000",
          "background": "#f1c40f",
          "type": "session",
          "style": "diamond"
        },
        {
          "properties": {
            "cache_duration": "none",
            "home_icon": "~",
            "style": "folder"
          },
          "trailing_diamond": "\ue0c0",
          "template": " \uea83 {{ .Path }} ",
          "foreground": "#000000",
          "background": "#f39c12",
          "type": "path",
          "style": "diamond"
        },
        {
          "properties": {
            "branch_max_length": 25,
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "trailing_diamond": "\ue0c0",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "#000000",
          "background": "#1abc9c",
          "type": "git",
          "style": "diamond",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#1abc9c{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#1abc9c{{ end }}",
            "{{ if gt .Ahead 0 }}#1abc9c{{ end }}",
            "{{ if gt .Behind 0 }}#1abc9c{{ end }}"
          ]
        },
        {
          "properties": {
            "cache_duration": "none",
            "display_mode": "files"
          },
          "trailing_diamond": "\ue0c0",
          "template": " \ue235 {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }}{{ else }}{{ .Full }}{{ end }}{{ end }} ",
          "foreground": "#000000",
          "background": "#3498db",
          "type": "python",
          "style": "diamond"
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none"
          },
          "trailing_diamond": "\ue0b4",
          "template": "<parentBackground></> \ue23a ",
          "foreground": "#000000",
          "background": "#2ecc71",
          "type": "status",
          "style": "diamond",
          "background_templates": [
            "{{ if gt .Code 0 }}#e74c3c{{ end }}"
          ]
        }
      ]
    }
  ],
  "version": 3,
  "final_space": true
}
